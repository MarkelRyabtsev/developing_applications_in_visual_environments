<Window x:Class="lab_work_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_work_5"
        mc:Ignorable="d"
        Title="Lab Work 4, variant 6, Markel Ryabtsev" Height="240" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="8">
            <Label Content="Введите строку символов:"></Label>
            <TextBox
                Height="157"
                TextWrapping="Wrap" 
                AcceptsReturn="True" 
                VerticalScrollBarVisibility="Auto" 
                Name="TextBox" 
                VerticalContentAlignment="Stretch" 
                TextChanged="TextBox_OnTextChanged"/>
        </StackPanel>
        <GroupBox Grid.Column="1" Header="Найденные целые числа:       " Margin="8">
            <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <TextBlock Name="TextBlock" Margin="0 8 0 0" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
